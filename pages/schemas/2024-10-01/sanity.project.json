{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://blueprints.sanity.io/schemas/2024-10-01/sanity.project.json",
  "title": "sanity.project",
  "description": "Projects are collections of resources and a permissions boundary",
  "type": "object",
  "properties": {
    "type": {
      "enum": [
        "sanity.project"
      ]
    },
    "name": {
      "type": "string",
      "description": "Project identifier"
    },
    "displayName": {
      "type": "string",
      "description": "Human-readable project name",
      "minLength": 1,
      "maxLength": 100,
      "examples": [
        "My Blog",
        "E-commerce Site",
        "Portfolio"
      ]
    },
    "studioHost": {
      "type": "string",
      "description": "Custom studio host URL",
      "format": "hostname"
    }
  },
  "required": [
    "type",
    "displayName"
  ],
  "additionalProperties": false
}
