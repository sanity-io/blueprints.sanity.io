{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://blueprints.sanity.io/schemas/2024-10-01/sanity.function.cron.json",
  "title": "sanity.function.cron",
  "description": "A Sanity Function that is invoked on a schedule",
  "type": "object",
  "properties": {
    "_type": { "enum": ["sanity.function.cron"] },
    "src": {
      "type": "string"
    },
    "event": { "$ref": "/schemas/event" },
    "enabled": { "type": "boolean" },
    "memory": { "type": "number" },
    "timeout": { "type": "number" },
    "env": { "type": "object" }
  },
  "required": ["_type", "src", "event"],
  "$defs": {
    "event": {
      "$id": "https://sanity.io/blueprints/schema/sanity.function.cron.event",
      "$schema": "http://json-schema.org/draft-07/schema#",
      "type": "object",
      "properties": {
        "minute": {"type": "number"},
        "hour": {"type": "number"},
        "dayOfMonth": {"type": "number"},
        "month": { "type": "number" },
        "dayOfWeek": { "type": "number" }
      },
      "required": ["minute", "hour", "dayOfMonth", "month", "dayOfWeek"]
    }
  }
}
