{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://blueprints.sanity.io/schemas/2024-10-01/sanity.project.origin.json",
  "title": "sanity.project.origin",
  "description": "CORS origins configuration for a Sanity project",
  "type": "object",
  "properties": {
    "type": {
      "enum": [
        "sanity.project.origin"
      ]
    },
    "name": {
      "type": "string",
      "description": "Origin configuration identifier"
    },
    "project": {
      "type": "string",
      "description": "Project ID this origin configuration belongs to"
    },
    "origin": {
      "oneOf": [
        {
          "type": "string",
          "description": "Single origin URL or wildcard pattern",
          "examples": [
            "https://myapp.com",
            "https://*.myapp.com",
            "http://localhost:3000",
            "*"
          ]
        },
        {
          "type": "array",
          "description": "Array of origin URLs or wildcard patterns",
          "items": {
            "type": "string",
            "examples": [
              "https://myapp.com",
              "https://*.myapp.com",
              "http://localhost:3000"
            ]
          },
          "minItems": 1,
          "uniqueItems": true
        }
      ]
    },
    "allowCredentials": {
      "type": "boolean",
      "description": "Whether to allow credentials (cookies, authorization headers) in CORS requests",
      "default": false
    }
  },
  "required": [
    "type",
    "name",
    "origin",
    "project"
  ],
  "additionalProperties": false
}
