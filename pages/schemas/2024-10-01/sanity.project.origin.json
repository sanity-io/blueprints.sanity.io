{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https:/blueprints.sanity.io/schemas/2024-10-01/sanity.project.origin.json",
  "type": "object",
  "title": "sanity.project.origin",
  "description": "CORS origins",
  "properties": {
    "type": { "enum": ["sanity.project.origin"] },
    "name": { "type": "string" },
    "project": { "type": "string" },
    "origin": {
      "oneOf": [
        {
          "type": "string",
          "description": "Single origin URL or wildcard pattern",
          "examples": [
            "https://myapp.com",
            "https://*.myapp.com",
            "http://localhost:3000",
            "*"
          ]
        },
        {
          "type": "array",
          "description": "Array of origin URLs or wildcard patterns",
          "items": {
            "type": "string",
            "examples": [
              "https://myapp.com",
              "https://*.myapp.com",
              "http://localhost:3000"
            ]
          },
          "minItems": 1,
          "uniqueItems": true
        }
      ]
    },
    "allowCredentials": {
      "type": "boolean",
      "description": "Whether to allow credentials (cookies, authorization headers) in CORS requests",
      "default": false
    }
  },
  "required": ["name", "origin", "project"],
  "additionalProperties": false
}
