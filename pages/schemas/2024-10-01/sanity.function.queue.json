{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://blueprints.sanity.io/schemas/2024-10-01/sanity.function.queue.json",
  "title": "sanity.function.queue",
  "description": "A Sanity Function that is invoked asynchronously and scales up with well defined concurrency semantics",
  "type": "object",
  "properties": {
    "type": {
      "enum": [
        "sanity.function.queue"
      ]
    },
    "name": {
      "type": "string",
      "description": "Function name"
    },
    "src": {
      "type": "string",
      "description": "Source file path"
    },
    "enabled": {
      "type": "boolean",
      "description": "Whether function is enabled",
      "default": true
    },
    "memory": {
      "type": "number",
      "description": "Memory allocation in MB"
    },
    "timeout": {
      "type": "number",
      "description": "Timeout in seconds"
    },
    "batchSize": {
      "type": "number",
      "description": "Number of messages to batch process at a time",
      "default": 1,
      "maximum": 10
    },
    "batchWindow": {
      "type": "number",
      "description": "Number of seconds in batch process",
      "default": 0,
      "maximum": 300
    },
    "env": {
      "type": "object",
      "description": "Environment variables"
    }
  },
  "required": [
    "type",
    "name",
    "src"
  ],
  "additionalProperties": false
}
